# ==============================================
# BetPromo Environment Configuration
# ==============================================
# Copy this file to .env and update the values

# ==============================================
# Application Environment
# ==============================================
NODE_ENV=development
API_PORT=3000
FRONTEND_PORT=80

# ==============================================
# PostgreSQL Database Configuration
# ==============================================
POSTGRES_DB=betpromo
POSTGRES_USER=betpromo_user
POSTGRES_PASSWORD=betpromo_pass
POSTGRES_PORT=5432

# Database connection for API (when running locally)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=betpromo
DB_USER=betpromo_user
DB_PASSWORD=betpromo_pass

# ==============================================
# pgAdmin Configuration
# ==============================================
PGADMIN_EMAIL=admin@betpromo.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8080

# ==============================================
# JWT Configuration
# ==============================================
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h

# ==============================================
# Security Configuration
# ==============================================
# bcrypt rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100        # max requests per window

# File upload limits
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes

# ==============================================
# Frontend Configuration
# ==============================================
# API URL for frontend (adjust for production)
VITE_API_URL=http://localhost:3000/api

# ==============================================
# Development Tools
# ==============================================
# Enable/disable development features
DEBUG=false
LOG_LEVEL=info

# ==============================================
# Production Configuration
# ==============================================
# SSL/TLS Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# CORS Configuration (for production)
# CORS_ORIGIN=https://yourdomain.com

# ==============================================
# Monitoring & Logging
# ==============================================
# Application monitoring
# SENTRY_DSN=your-sentry-dsn-here

# Log configuration
# LOG_FILE_PATH=/var/log/betpromo/app.log
# LOG_MAX_SIZE=10m
# LOG_MAX_FILES=5

# ==============================================
# Email Configuration (if needed)
# ==============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@betpromo.com

# ==============================================
# External Services (if needed)
# ==============================================
# Redis for caching/sessions
# REDIS_URL=redis://localhost:6379

# AWS S3 for file storage
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=betpromo-uploads

# ==============================================
# Docker Compose Overrides
# ==============================================
# These variables are used by docker-compose.yml
# Uncomment and modify as needed

# Container names (optional)
# COMPOSE_PROJECT_NAME=betpromo

# Network configuration
# NETWORK_SUBNET=172.20.0.0/16

# Volume paths (for bind mounts)
# DATA_PATH=./data
# LOGS_PATH=./logs
# UPLOADS_PATH=./uploads